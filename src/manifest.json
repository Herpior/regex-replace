{
	"manifest_version": 2,
	"name": "Regex Replace",
	"version": "1.0",
	"icons": { 
		"16": "img/gear16.png",
		"48": "img/gear48.png",
		"128": "img/gear128.png" 
	},
	"permissions": [
		"storage"
	],
	"description": "Replaces matched strings with different strings.",
	"browser_action": {
        "default_title": "Regex Replace Options",
        "default_icon": {
            "19": "img/gear19.png",
            "38": "img/gear38.png"
        },
        "default_popup": "html/main.html"
    },
	"content_scripts": 
	[
		{
			"matches": ["*://*/*"],
			"js": ["js/content_script.js"],
			"run_at": "document_end"
		}
	]
}